<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Author:</strong>
  <%= author_name(@post) %>
</p>

<% if can? :update, @post %><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-outline-light" %> | <% end %>
<%= link_to 'Back', posts_path, class: "btn btn-outline-light" %> |
