<p id="notice"><%= notice %></p>

<div class="table-responsive">
  <table class="table align-middle">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= author_name(post) %></td>
          <td><%= link_to 'Show', post, class: "btn btn-outline-secondary" %></td>
          <td><% if can? :update, post %><%= link_to 'Edit', edit_post_path(post),
                class: "btn btn-outline-secondary"
              %>
              <% end %>
          </td>
          <td><% if can? :destroy, post %><%= link_to 'Destroy', post,
                method: :delete, data: { confirm: 'Are you sure?' },
                class: "btn btn-outline-danger"
              %>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
